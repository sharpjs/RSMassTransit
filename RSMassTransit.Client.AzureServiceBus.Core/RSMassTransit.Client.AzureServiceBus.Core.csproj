  <PropertyGroup>
    <Description>Azure Service Bus client implementation for RSMassTransit, a MassTransit message bus interface for SQL Server Reporting Services.</Description>
    <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MassTransit.Azure.ServiceBus.Core" Version="[6.2.5,7.0.0)" />
    <!-- Versions for project refs that become package refs in the NuGet package.
         See: https://github.com/dotnet/sdk/issues/1151#issuecomment-297265205 -->
    <PackageReference Include="RSMassTransit.Client" Version="[$(PackageVersion)]" Condition="$(GeneratePackageOnBuild)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\RSMassTransit.Client\RSMassTransit.Client.csproj" />
  </ItemGroup>

</Project>
